/* pages/details/details.wxss */
.container {
	display: flex;
	flex-direction: column;
	align-items: center;
}
.header {
	width: 750rpx;
	height: 50rpx;
	text-align: center;
	line-height: 50rpx;
	font-size: 16px;
	border:1px solid #ccc;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}
.header_name {
	width: 300rpx;
	height: 100%;
}
.header_img {
	width: 300rpx;
	height: 50rpx;
}
.header_img_status {
	width: 50rpx;
	height: 50rpx;
	padding-left: 30rpx;
}
.content {
	width: 750rpx;
	height: 300rpx;
	border: 1px solid #ccc;
}
.content_img {
	width: 750rpx;
	height: 100%;
	background-size: 100%;
}
.footer {
	width: 300rpx;
	height: 40rpx;
	line-height: 40rpx;
	text-align: center;
	border: 1px solid #ccc;
}