/* pages/scroll/scroll.wxss */
.scroll-header{
	display: flex;
	white-space: nowrap;  /*这个很重要，*/
}
.scroll-header view{
	height:128rpx;
	line-height: 128rpx;
	width:128rpx;
	text-align: center;
	border:1px solid red;
	display: inline-block; /*这个也很重要*/
}
.scroll-test {
	width: 300rpx;
	height: 300rpx;
	border: 1px solid #ccc;
	margin: 15px;
}
.scroll-test-img {
	width: 300rpx;
	height: 300rpx;
	background-size: 100%;
}
.box_wrap {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	border:1px solid #ccc;
	width: 400rpx;
	height: 400rpx;
}
.box_common {
	width: 100rpx;
	height: 100rpx;
	border: 1px solid #ccc;
	text-align: center;  /*文字水平居中*/
	line-height: 100rpx; /*文字垂直居中*/
}
.box_one {
	/*align-self: flex-start;*/ /*每一个子合盒子的自己的样式*/
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}
.box_two {
	align-self: center;
}
.box_three {
	/*align-self: flex-end;*/
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}
.box_column {
	display: flex;
	flex-direction: column;
	width: 200rpx;
	height: 500rpx;
	border: 1px solid #ccc;
	justify-content: space-between; /*主轴对齐方式*/
	align-items: center; /*交叉轴对齐方式*/
}